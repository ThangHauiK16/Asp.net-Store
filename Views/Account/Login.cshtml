@model LoginViewModel
@{
    ViewData["title"] = "Login";
}
<style>
	.btn.btn-primary {
		background: #1090ff;
		border: 0 none;
		border-radius: 15px;
		margin: 17px;
		transition: background-color 0.3s ease;
	}

		.btn.btn-primary:hover{
			background-color:red;
			
		}

		.btn-danger{
		 margin: 17px;
		 transition: background-color 0.3s ease, color 0.3s ease, border 0.3s ease;
	}

		.btn:hover{
			background-color: blue;
		}
</style>
<section>
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">

						<div class="form-group">
							<label>Username</label>
							<input asp-for="Username" class="form-control"> </input>
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control"> </input>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						
						<div class="row">
							<div class="col-md-3">
								<button class="btn btn-primary">
									<i class="bi bi-person-fill"></i> Sign In
								</button>
							</div>
							<div class="col-md-3">
								<a alt="Login by google" class="btn btn-danger" asp-action="LoginByGoogle" asp-controller="Account">
									<i class="bi bi-google"></i> Login by Google
								</a><br />
							</div>
							<div class="col-md-3">
								<a asp-action="Create" class="btn btn-primary" asp-controller="Account">
									<i class="bi bi-person-plus-fill"></i> Register
								</a><br />
							</div>
							<div class="col-md-3">
								<a asp-action="ForgetPass" class="btn btn-danger" asp-controller="Account">
									<i class="bi bi-key"></i> Forget Password
								</a>
							</div>
						</div>

						
						
						
					</form>
				</div><!--/login form-->
			</div>
			
			
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
