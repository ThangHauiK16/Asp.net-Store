 @model ContactModel

 <style>
    .companyinfo2 {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }
 </style>
@if (Model != null)
{
    <div class="row">
        <div class="col-sm-3">
            <div class="companyinfo">
                <p><img src="~/media/logo/@Model.LogoImg" width="200px" height="120px" /></p>
                <p>@Html.Raw(@Model.Description)</p>
            </div>
        </div>
        <div class="col-sm-5 col-md-5 companyinfo2" style="min-height: 200px;">
            @Html.Raw(@Model.Map)
        </div>


        <div class="col-sm-4">
            <div class="address">
                <h5><b>Name: @Model.Name</b></h5>
                <h5>Email: @Model.Email</h5>
                <h5>@Model.Phone</h5>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <p>No contact data available.</p>
    </div>
}
 
